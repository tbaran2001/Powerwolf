@page
@using JsonFiles
@model Powerwolf.Pages.SongModel
@{
    ViewData["Title"] = "Song";
    Song song = (Song)ViewData["Song"];
}

<div class="container fs-3" style=" width:80%">
    <h1 style="text-align: center">@song.Name</h1>
    <div class=" custom-bg" style="border-color: var(--text-color)">
        <div class="card-body">
            <h5 class="card-title fs-2">Album Name:</h5>
            <p class="card-text">@song.Album</p>
        </div>
        <ul class="list-group list-group-flush" style="padding-left:15px">
            <li class="custom-bg fw-light"><strong>Release Date:</strong> @song.ReleaseDate</li>
        </ul>
        @{
            string temp = song.SpotifyLink + "?utm_source=generator&theme=0";
            if (song.SpotifyLink != "")
            {
                <iframe style="border-radius:12px" src="@temp" width="100%" height="152" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
            }
        }
        <div class="card-body" style="align-items: center">
            <h5 class="card-title fs-2" style="text-align: center">Lyrics:</h5>
            @{
                string lyrics = song.Lyrics;
                lyrics = lyrics.ToString().Replace("\n", "<br />");
            }
            <p class="card-text">@Html.Raw(lyrics)</p>
        </div>
    </div>
</div>